<Page x:Class="WpfApp2.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <Border Background="White"/>
        <StackPanel Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">

            <Label  Content="Nome Curso:" FontFamily="Arial Black" Margin="0 10 0 10" FontSize="15"/>
            <TextBox Margin="130 -32 0 30" Width="490"/>

            <Label Content="Código:" FontFamily="Arial Black" FontSize="15" Width="127" Margin="0 -20 540 0" />
            <TextBox Margin="130 -25 0 5" Width="490"/>

            <Label Content="Descrição :" FontFamily="Arial Black" FontSize="15" Width="127" Margin="0 0 485 60"/>
            <TextBox Margin="130 -84 0 66" Width="490"/>

            <Label Content="Coordenador:" FontFamily="Arial Black" FontSize="15" Width="120" HorizontalAlignment="Left" Margin="0 -60 0 60"/>
            <TextBox Margin="130 -82 0 80" Width="490"/>

            <Label Content="Ativo:" FontFamily="Arial Black" FontSize="15" Width="100" HorizontalAlignment="Left" Margin="0 -75 0 60"/>
            <TextBox Margin="130 -82 0 80" Width="490"/>

            

        </StackPanel>
        <Button Grid.Column="2" Grid.Row="2" Content="Cancelar" FontFamily="Arial Black" Background="#f06b4b"  HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 20 20" Width="100" Height="30"/>
        <Button Grid.Column="2" Grid.Row="2" Content="Cadastrar" FontFamily="Arial Black" Background="#FFD5F7E6"  HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 130 20" Width="100" Height="30"/>
    </Grid>
</Page>
